<com.kickstarter.ui.views.DiscoveryToolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:showIn="@layout/discovery_layout"
        android:id="@+id/discovery_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/dark_blue"
        android:elevation="3dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/filter_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

            <TextView
                    android:id="@+id/filter_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/grid_1_half"
                    android:textSize="20sp"
                    android:textColor="@color/white" />

            <com.kickstarter.ui.views.IconTextView
                    android:id="@+id/filter_expand_more_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expand_more"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

            <com.kickstarter.ui.views.IconTextView
                    android:id="@+id/search_button"
                    android:layout_width="@dimen/button_icon_fixed_width"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_selector"
                    android:gravity="center"
                    android:text="@string/search_icon"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/white" />

            <com.kickstarter.ui.views.IconTextView
                    android:id="@+id/activity_feed_button"
                    android:layout_width="@dimen/button_icon_fixed_width"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/button_selector"
                    android:text="@string/flash_on_icon"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/white" />

            <com.kickstarter.ui.views.IconTextView
                    android:id="@+id/login_button"
                    android:background="@drawable/button_selector"
                    android:layout_width="@dimen/button_icon_fixed_width"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/lock_icon"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/white" />


            <com.kickstarter.ui.views.IconTextView
                    android:id="@+id/current_user_button"
                    android:layout_width="@dimen/button_icon_fixed_width"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/button_selector"
                    android:text="@string/more_vert_icon"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/white"
                    android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>
</com.kickstarter.ui.views.DiscoveryToolbar>
